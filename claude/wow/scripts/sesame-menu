#!/bin/bash

# Simple numbered menu for sesame workflows
# Prototype for future SPlectrum DSL integration

echo ""
echo "=== Sesame Workflow Menu ==="
echo "1. Start session (start sesame)"
echo "2. Finish session (finish sesame)"
echo "3. Create task (task . sesame)"
echo "4. Process inbox (inbox sesame)"
echo "5. Commit changes (commit sesame)"
echo "6. Release version (release sesame)"
echo "7. Patch release (patch sesame)"
echo "8. Next issue (next sesame)"
echo "9. Version planning (version sesame)"
echo "10. Exit"
echo ""

read -p "Choose workflow (1-10): " choice

case $choice in
  1) echo "start sesame" ;;
  2) echo "finish sesame" ;;
  3) echo "task . sesame" ;;
  4) echo "inbox sesame" ;;
  5) echo "commit sesame" ;;
  6) echo "release sesame" ;;
  7) echo "patch sesame" ;;
  8) echo "next sesame" ;;
  9) echo "version sesame" ;;
  10) echo "Goodbye!"; exit 0 ;;
  *) echo "Invalid choice. Please select 1-10." ;;
esac